@model IEnumerable<C2C2.Entities.Question>


@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuestionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ans1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ans2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ans3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ans4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cans)
            </th>
            <th>
               
                @Html.DisplayNameFor(model => model.sid)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ans1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ans2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ans3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ans4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cans)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sid)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.QuestionId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.QuestionId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.QuestionId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
